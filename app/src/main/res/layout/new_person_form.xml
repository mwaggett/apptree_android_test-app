<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/newPersonForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a New Person"
        android:id="@+id/addPersonLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/firstNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="First Name"
        android:layout_below="@+id/addPersonLabel"
        android:layout_alignLeft="@+id/phoneText"
        android:layout_alignStart="@+id/phoneText"/>
    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_alignTop="@+id/firstNameText"
        android:layout_alignRight="@+id/phoneText"
        android:layout_alignEnd="@+id/phoneText"/>
    <EditText
        android:layout_below="@id/lastNameText"
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Phone Number"
        android:width="250dp"/>
    <EditText
        android:id="@+id/emailText"
        android:layout_below="@id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_alignLeft="@+id/phoneText"
        android:layout_alignStart="@+id/phoneText"
        android:layout_alignRight="@+id/phoneText"
        android:layout_alignEnd="@+id/phoneText"/>

    <EditText
        android:id="@+id/addressText"
        android:layout_below="@id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignStart="@+id/emailText"
        android:layout_alignRight="@+id/emailText"
        android:layout_alignEnd="@+id/emailText"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imageInput"
        android:layout_below="@+id/addressText"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo"
        android:id="@+id/addPhotoButton"
        android:layout_below="@+id/imageInput"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/addressText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addressText"/>

</RelativeLayout>